{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@usecapsule/integration-examples/*": [
        "packages/integration-examples/src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "packages/*/src",
    "examples/remix-app/app/components/capsule.client.tsx"
  ],
  "exclude": ["node_modules"]
}
